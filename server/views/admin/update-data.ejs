<%- include('../layouts/header') %> 

<div class="container mt-5">
    <div class="row d-flex justify-content-around">
        <div class="col-lg-6">
            <h1 class="text-center">EDIT FORM</h1><br>
            <form method="POST" action="/update/<%= biodata.id %> ">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" class="form-control" id="username" name="username" value="<%= biodata.username %>">
                </div>
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" value="<%= biodata.fullName %>">
                </div>
                <div class="mb-3">
                    <label for="gender" class="form-label">Gender</label>
                    <input type="text" class="form-control" id="gender" name="gender" value="<%= biodata.gender %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="text" class="form-control" id="email" name="email" value="<%= biodata.email %>">
              </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %> 